</head>

<body>
	<div id="wrapper">
		<div id="header">
			<table width="100%" border="0" cellpadding="0" cellspacing="0">
         	<tbody>
            	<tr>
               	<td><%= image_tag('reMarriage_logo.gif', :size => "344x80") %></td>
                  <td><div style="text-align: right;">reArticles</div><br /></td>
               </tr>
            </tbody>
        </table>
        <div class="clear"></div>
        <div class="chromestyle" id="chromemenu">
        <ul>
            <li><%= link_to "Home", :root %></li>
            <li><%= link_to "Articles", :controller => "contents", :action => "index", :content_type => "article" %></li>
            <li><%= link_to "Blogs", :controller => "contents", :action => "index", :content_type => "blog" %></li>
            <li><%= link_to "Videos", :controller => "contents", :action => "index", :content_type => "video" %></li>
            <li><%= link_to "External Sources", :controller => "contents", :action => "index", :content_type => "external" %></li>
        </ul>
        <div id="spacer">&nbsp;</div>
		</div>  
      <!--#nav_01-->
      	<div id="nav_02">
        		<div id="nav_02_text">
        			<%= @breadcrumbs %>
        		</div>
        </div>
        <!--#nav_02-->
      </div>
      <!--#header-->
      <div id="main_content">
      	<div id="flash_content">
        		<p><%= yield %></p>
        	</div>
        	<!--#flash_content-->
        	<div id="featured">
        	<!--New content -->
        		<div id="featured-header">
        			<h1 class="featured-headline">
        				<a href="#" title="">Right Header</a>
        			</h1>
        		</div>
        		<!--#featured-header-->
        		<p>RIGHT BODY</p>
        	</div>
        	<div class="clear"></div>
		</div>
      <!--#main_content-->
      <div id="secondary_content_wrapper">
      	<div class="divider_brown">
      	</div>
        	<!--.divider_brown--><!--.content_row-->
        	<div class="content_row">
        		<div class="small_content_block_01">
        			<h1>FOOTER LEFT</h1>
        			<p><strong>FOOTER LEFT TEXT </strong></p>
        			<p>&nbsp;</p>
        		</div>
        		<div class="small_content_block_B">
        			<h1>FOOTER MIDDLE</h1>
        			<p>FOOTER MIDDLE TEXT</p>
        		</div>
        		<div class="contest">
        			<h1>FOOTER RIGHT</h1>
        			<p class="MsoNormal">Footer right text</p>
       			<p class="MsoNormal"><strong>More text</strong></p><br />
       		</div>
        		<div class="small_content_block_03">
        			<div style="text-align: center;">FOOTER FAR RIGHT HI</div>
        			<div style="text-align: center;"><span class="profile_login">FOOTER FAR RIGHT</span><br /></div>
        		</div>
        		<div class="clear"></div>
        		<div class="divider_brown"></div>
        		<!--.divider_brown-->
        	</div>
        	<!--.content_row-->
       </div>
       <!--secondary_content_wrapper-->
       <div id="footer">
       	<div id="footer_text">&copy; 2010 Remarriage, LLC | All Rights Reserved</div>
        	<!--#footer_text-->
        	<div id="footer_nav">
        		<ul>
            	<li><a href="http://remarriageworks.com/contact">Contact Us</a></li>
            	<li><a href="http://www.remarriageworks.com/privacy">Privacy </a></li>
        		</ul>
        	</div>
		</div>
	</div>
